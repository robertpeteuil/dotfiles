[include]
  path = ~/.gitconfig_private
  path = ~/.gitconfig_custom
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[push]
  default = simple
[format]
  pretty = %Cblue%h%Creset %Cgreen[%ar]%Creset (%an) %s
[core]
  excludesfile = ~/.gitignore_global
  editor = nano
  autocrlf = input
  pager = less -R
[difftool "opendiff"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path = /usr/bin/opendiff
[color]
  ui = true
  diff = true
[diff]
  color = true
  colorMoved = zebra
[pager]
  color = true
[status]
  color = true
[alias]
  st = status
  co = checkout
  b = branch
  wdiff = diff --word-diff=color --unified=1
  up = "!git remote update -p; git merge --ff-only @{u}"
  # Mark a file as "assume unchanged", which means that Git will treat it
  # as though there are no changes to it even if there are. Useful for
  # temporary changes to tracked files
  assume = update-index --assume-unchanged
  # Reverse the above
  unassume = update-index --no-assume-unchanged
  # Show the files that are currently assume-unchanged
  assumed = "!git ls-files -v | grep ^h | cut -c 3-"
[pull]
  ff = only
[includeIf "gitdir:~/Versioned/"]
  path = ~/.gitconfig_ssh
[includeIf "gitdir:~/go/"]
  path = ~/.gitconfig_ssh
[color "status"]
  branch = 12 normal
  added = 10 normal
  updated = 10 normal
  localbranch = 12 normal
  changed = 11 normal
  header = normal
  remotebranch = 6 normal
  nobranch = 1 normal
  unmerged = 9 normal
  untracked = 8 normal
[color "branch"]
  plain = normal
  remote = 6 normal
  current = 15 4
  local = 12 normal
  upstream = 6 normal
[color "remote"]
  hint = 8 normal
  success = 10 normal
  error = 9 normal
  warning = 11 normal
[color "interactive"]
  header = 8 normal bold
  prompt = 15 4
  help = 8 normal
  error = 9 normal
[color "diff"]
  commit = 3 normal
  context = normal
  contextBold = normal bold
  contextDimmed = normal dim
  frag = 8 normal
  func = 8 normal
  new = 15 2
  newBold = 15 2 bold
  newDimmed = 15 2 dim
  newMoved = 15 5
  newMovedAlternative = 15 4
  newMovedAlternativeDimmed = 15 4 dim
  newMovedDimmed = 15 5 dim
  meta = 8 normal
  old = 15 1
  oldBold = 15 1 bold
  oldDimmed = 15 1 dim
  oldMoved = 15 3
  oldMovedAlternative = 15 8
  oldMovedAlternativeDimmed = 15 8 dim
  oldMovedDimmed = 15 3 dim
  whitespace = normal 9
[color "decorate"]
  branch = 12 normal
  tag = 5 normal
  remotebranch = 6 normal
  stash = 8 normal
  grafted = 1 normal
  HEAD = 15 4
[init]
  defaultBranch = main
